{
    // Deno debug configuration for VS Code (uses the pwa-node debugger)
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Deno: Launch main.ts",
            "cwd": "${workspaceFolder}",
            // If `deno` is not on PATH in your environment, replace "deno" below
            // with the absolute path to the deno binary, e.g. "/home/user/.deno/bin/deno"
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--unstable",
                "--inspect-brk=9229",
                "--allow-all",
                "${workspaceFolder}/main.ts"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {}
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Deno (9229)",
            "port": 9229,
            "restart": false,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "${workspaceFolder}"
        }
    ]
}